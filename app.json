{
  "expo": {
    "name": "trade-flow-app",
    "slug": "trade-flow-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tradeflowapp",
    "userInterfaceStyle": "automatic",
    // ...existing code...
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.tradeflow.app",
      "infoPlist": {
        "NSCameraUsageDescription": "TradeFlow needs camera access to take photos of completed work for job records.",
        "NSPhotoLibraryUsageDescription": "TradeFlow needs photo library access to attach existing photos to job records.",
        "NSContactsUsageDescription": "TradeFlow can import customer details from your contacts to save you typing."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      // ...existing code...
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "@react-native-community/datetimepicker",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
